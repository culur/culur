# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.sh]
end_of_line = lf

[package.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
