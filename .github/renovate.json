{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": ["config:recommended"],
  "baseBranches": ["dev"],
  "labels": ["dependencies"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "rangeStrategy": "bump",
      "labels": ["dependencies", "dependencies: all dependencies"],
      "matchPackagePatterns": ["*"],
      "groupName": "{{#if isMajor}}all major dependencies{{else}}all dependencies{{/if}}",
      "groupSlug": "{{#if isMajor}}all-major-dependencies{{else}}all-dependencies{{/if}}"
    },
    {
      "rangeStrategy": "bump",
      "labels": ["dependencies", "dependencies: only dependencies"],
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "groupName": "{{#if isMajor}}only major dependencies{{else}}only dependencies{{/if}}",
      "groupSlug": "{{#if isMajor}}only-major-dependencies{{else}}only-dependencies{{/if}}"
    },
    {
      "rangeStrategy": "bump",
      "labels": ["dependencies", "dependencies: only devDependencies"],
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "{{#if isMajor}}only major dev dependencies{{else}}only dev dependencies{{/if}}",
      "groupSlug": "{{#if isMajor}}only-major-dev-dependencies{{else}}only-dev-dependencies{{/if}}"
    },
    {
      "description": "Ignore nodejs",
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "description": "Ignore peerDependencies",
      "matchFileNames": ["packages/config-eslint/package.json"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": ["eslint"],
      "enabled": false
    },
    {
      "description": "Ignore peerDependencies",
      "matchFileNames": ["packages/config-prettier/package.json"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": ["prettier"],
      "enabled": false
    },
    {
      "description": "Ignore peerDependencies",
      "matchFileNames": ["packages/config-stylelint/package.json"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": ["stylelint"],
      "enabled": false
    },
    {
      "description": "Ignore peerDependencies",
      "matchFileNames": ["packages/config-typescript/package.json"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": ["typescript"],
      "enabled": false
    }
  ]
}
