{
  "name": "@culur/config-prettier",
  "version": "0.0.0",
  "description": "Culur's prettier configuration",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/culur/culur.git",
    "directory": "packages/config-prettier"
  },
  "bugs": {
    "url": "https://github.com/culur/culur/issues"
  },
  "homepage": "https://github.com/culur/culur#readme",
  "author": "culur <culur.net@gmail.com>",
  "license": "MIT",
  "keywords": [
    "culur",
    "config",
    "prettier"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./factory": {
      "import": {
        "types": "./dist/factory.d.ts",
        "default": "./dist/factory.js"
      },
      "require": {
        "types": "./dist/factory.d.cts",
        "default": "./dist/factory.cjs"
      }
    }
  },
  "files": [
    "!**/*.json",
    "!**/*.test.*",
    ".prettierignore",
    ".prettierrc.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "tsup",
    "test": "tsc --noEmit && vitest run"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@culur/config-tsup": "*",
    "@culur/config-typescript": "*",
    "@culur/config-vite": "*",
    "@culur/types": "*",
    "@culur/utils-packages": "*",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0"
  }
}
