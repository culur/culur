{
  //? Configs
  "extends": "./tsconfig.json",
  "compilerOptions": {
    //? Language and Environment
    "lib": [],

    //? Modules
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node", "jsdom"],

    //? Type Checking
    "noImplicitAny": false
  },

  //? Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",

    "scripts/**/*.ts",
    ".*rc.js",
    ".*rc.cjs",
    "*.config.js",
    "*.config.cjs",
    "*.config.ts",
    "*.config.mts"
  ],
  "exclude": ["node_modules"]
}
