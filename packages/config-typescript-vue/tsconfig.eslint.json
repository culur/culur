{
  //? Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",

    "scripts/**/*.ts",
    ".*rc.js",
    ".*rc.cjs",
    "*.config.js",
    "*.config.cjs",
    "*.config.ts",
    "*.config.mts"
  ],
  "exclude": ["node_modules"],

  //? Configs
  "extends": "./tsconfig.json",
  "compilerOptions": {
    //! Type Checking
    "noImplicitAny": false,

    //! Modules
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },

    "lib": [],
    "types": ["node", "jsdom"]
  }
}
