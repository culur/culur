{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  packageRules: [
    {
      groupName: 'Linter and Formatter',
      groupSlug: 'root-linter-and-formatter',
      semanticCommitScope: 'deps/root',
      rangeStrategy: 'bump',
      matchPackageNames: [
        '/.*eslint.*/',
        '/.*stylelint.*/',
        '/.*markdownlint.*/',
        '/.*prettier.*/',
      ],
      matchFileNames: ['package.json'],
    },
  ],
}
