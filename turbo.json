{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "dependsOn": ["^build", "build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build", "build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {},
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["clean", "^build"]
    },
    "deploy": {
      "dependsOn": ["build"]
    }
  }
}
